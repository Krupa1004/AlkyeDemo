<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="40dp"
        android:paddingStart="20dp"
        android:background="@color/black">

        <TextView
            android:id="@+id/socialConnectTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/social_connect"
            android:textColor="@color/white"
            android:fontFamily="@font/strawford_bold"
            android:textSize="22sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/socialConnectDescriptionTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/social_connect_description"
            android:textColor="@color/white"
            android:fontFamily="@font/strawford_medium"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/socialConnectTextView"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvSocialConnect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/socialConnectDescriptionTextView"
            tools:itemCount="2"
            tools:listitem="@layout/item_featured_article" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>